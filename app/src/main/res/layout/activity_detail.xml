<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".DetailActivity"
    android:padding="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <ImageView
                android:id="@+id/gambarBeritaDetail"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:scaleType="fitXY"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:src="@mipmap/ic_launcher"
                />
            <TextView
                android:id="@+id/txtJudulDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Judul"
                android:layout_below="@+id/gambarBeritaDetail"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="16dp"/>

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/txtTanggalDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:layout_below="@+id/txtJudulDetail"
                android:textSize="14sp"/>

            <TextView
                android:layout_marginTop="8dp"
                android:id="@+id/txtPenulisDetail"
                android:layout_below="@id/txtJudulDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="24dp"
                android:text="Penulis"
                android:layout_alignParentEnd="true"
                android:textSize="14sp"/>

            <WebView
                android:id="@+id/newsContentDetail"
                android:layout_marginTop="24dp"
                android:layout_below="@+id/txtTanggalDetail"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </WebView>

    </RelativeLayout>

</ScrollView>